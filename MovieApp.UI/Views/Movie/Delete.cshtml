@model MovieApp.Entity.MovieModel
@{
    ViewData["Title"] = "Delete";
}
<a asp-controller="Movie" asp-action="GetMovies">Movie Details</a>
<h1>Delete</h1>
<form method="post">

    <div class="form-group">
        <label for="TheatreName">Movie ID</label>
        <input type="text" class="form-control" asp-for="MovieId" disabled="disabled" />
    </div>
    <div class="form-group">
        <label for="TheatreName">Movie Name</label>
        <input type="text" class="form-control" asp-for="MovieName" disabled="disabled" />
    </div>
    <div class="form-group">
        <label for="DirectorName">Movie Description</label>
        <input type="text" class="form-control" asp-for="MovieDescription" disabled="disabled" />
    </div>
    <div class="form-group">
        <label for="ActorName">Movie Type</label>
        <input type="text" class="form-control" asp-for="MovieType" disabled="disabled"/>
    </div>
    <div class="form-group">
        <label for="ActressName">Movie Language</label>
        <input type="text" class="form-control" asp-for="MovieLanguage" disabled="disabled" />
    </div>
    <input type="submit" class="btn btn-primary" value="Delete Movie">
    <button type="button" class="btn btn-secondary">Reset</button>
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }

</form>

